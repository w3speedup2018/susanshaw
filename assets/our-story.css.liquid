/* flip the pane when hovered */
.swiper-slide-active:hover .card, .swiper-slider.hover .card,
.happy-family .galleries .gallery:hover > .card{
    transform: rotateY(180deg);
}
/* flip speed goes here */
.card,
.happy-family .galleries .gallery .image-element__wrap{
    transition: 0.6s;
    transform-style: preserve-3d;
    position: relative;
}  

/* hide back of pane during swap */
.swipe-slider .swiper-slide.swiper-slide-active:hover .back,
.happy-family .galleries .gallery:hover .back{
    opacity: 1;   
    color: #000;
}

.front, .back {
	backface-visibility: hidden;
	position: absolute;
	top: 0;
	left: 0;
}
.front {
	z-index: 2;
	/* for firefox 31 */
	transform: rotateY(0deg);
}
.back {
    display: flex;
    align-items: center;
	transform: rotateY(180deg);
    backface-visibility: hidden;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height:100%;
    padding: 10px;
    margin: 0;
    background-color:var(--colorFrenchBlue);
    color: white;
    opacity:0;
    transition: opacity .25s ease-in-out;
    -moz-transition: opacity .25s ease-in-out;
    -webkit-transition: opacity .25s ease-in-out;
    box-sizing: border-box;  
    border: 5px solid #efebdf;
    padding: 10px;
    font-size: 14px;
}

.swipe-slider .swiper-slide:not(.swiper-slide-active){
    opacity: 0.9;
   /* filter: grayscale( 100% );
    -webkit-filter: grayscale( 100% ); */
}
.swipe-slider .swiper-slide:not(.swiper-slide-active) img{
    object-fit: cover !important;
}

 
.swipe-slider .card span:nth-of-type(1){
    font-family: var( --sweet-sans-pro-medium);
}

.swiper-button-next:after,
.swiper-button-prev:after{
    display: none !important;
}

.swipe-slider .swiper-button-prev:hover svg path,
.swipe-slider .swiper-button-next:hover svg path{
    fill: var(--colorFrenchBlue);

}

