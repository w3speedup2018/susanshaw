        },     
        {
          "type": "select",
          "id": "image_fit",
          "label": "Image Fit",
          "options": [
            {          
            "value": "image_cover",
            "label": "Cover"
            },
            {          
              "value": "image_contain",
              "label": "Contain"
            }
          ],
          "default": "image_contain"         
        },       
      
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        }        
      ]
    }

  ],
  "presets": [ 
    {
      "name": "Our Story",
      "category": "Page"
    }
  ]
}

{% endschema %}