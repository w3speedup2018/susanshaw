  <script defer>
  window.addEventListener('load', function() {   
      const swiper = new Swiper('.swipe-slider', {
          autoplay: {
            delay: 111500,            // Autoplay delay in milliseconds
            disableOnInteraction: false, // Continue autoplay on user interaction
          },
          loop: true,                         // loop
          slidesPerView: 2,                   // how many slides to show
          centeredSlides: true,               // centering the first slide                
          effect: "coverflow",                // applying the coverflow effect
          coverflowEffect: {
              rotate: 0,                      // Rotate of the prev and next slides
              depth: 200,                     // Depth of the prev and next slides
              stretch: 100,                    // Space between the slides
              modifier: 1,                    // Multiply the values of rotate, depth, and stretc
              scale: 1,                       // Size ratio of the prev and next slides
              slideShadows: false,            // Presence of shadow on the surfaces of the prev and next slides            
          },        
          fadeEffect: { 
            crossFade: true          // Enable cross-fade transition
          },
            // Responsive breakpoints
          breakpoints: {                      
            // when window width is >= 640px
            1023: {
              slidesPerView: 3,
              coverflowEffect: {
                  rotate: 0,      
                  depth: 300,      
                  stretch: 200                                
              }                       
            }
          },
          navigation: {                       // navigation(arrows)
              nextEl: ".swiper-button-next",
              prevEl: ".swiper-button-prev",
          },
          on: {
            init: function () {              
              
              this.el.addEventListener('mouseenter', function () {
                console.log('======hover start');
                swiper.autoplay.stop();
               
              });
              this.el.addEventListener('mouseleave', function () {
                console.log('======hover end');
                swiper.autoplay.start();  // Stop autoplay when not hovering
              });
            }
          }               
      });    
      
      var susanHQ = document.querySelector('#Layer_2');
      var hqTitle = document.querySelector('.hq-wtree .hq-title');
      susanHQ.addEventListener('mouseenter',function(){
        console.log('==========');
        hqTitle.classList.add('animate_down');
      });
      susanHQ.addEventListener('mouseleave',function(){
        console.log('==========');
      
      });
    
  });
  </script>
  

